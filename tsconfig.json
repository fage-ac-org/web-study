{
  /* 继承基础 TypeScript 选项，避免默认回退到 ES3 */
  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    /* 为根工程单独生成增量信息，方便项目引用 */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.root.tsbuildinfo",
    /* 确保内置库齐全，解决 Map/Set/WeakMap 等类型缺失 */
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    /* 根配置也需允许发射声明文件以配合引用 */
    "noEmit": false,
    "emitDeclarationOnly": true,
    "composite": true,
    "types": ["node"]
  },

  /* 根配置文件,仅用于编辑器和项目引用,不直接编译代码 */
  "files": [],

  /* 包含类型声明文件 */
  "include": ["./types/typed-router.d.ts", "src/**/*.d.ts"],

  /* 项目引用配置 - 同时启用应用和 Node.js 配置 */
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
